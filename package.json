{
  "name": "@pimp-my-book/umqombothi-component-library",
  "version": "0.2.0",
  "private": false,
  "main": "src/index.js",
  "module": "src/index.js",
  "license": "MIT",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/pimp-my-book/umqombothi-component-library.git"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "react-scripts build build:css build:react",
    "build:css": "postcss src/css/tailwind.css -o src/index.css",
    "watch:css": "postcss src/css/tailwind.css -o src/index.css -w",
    "start:react": "yarn styleguidist server",
    "build:react": "yarn styleguidist build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.1.2",
    "autoprefixer": "^9.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "react-styleguidist": "^9.1.14",
    "tailwindcss": "^1.0.5"
  }
}
